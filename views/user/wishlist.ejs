<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Bungee&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/user/cart.css" />
    <link rel="stylesheet" href="/stylesheets/user/headerFooter.css">
    <title>KickStore - Wishlist</title>
  </head>
  <body>

        <%- include('../partials/userHeader.ejs') %>

    <!-- sidebar -->
    <main>
        <!-- content body -->
        <div id="confirm-delete" class=" popup d-none">
          <div class="dialog">Delete this item from wishlist?</div>
          <div>
            <button onclick="closeDeleteConfirm()" class="confirm-button">No</button>
          <button onclick="deleteFromWishlist()" class="confirm-button" style="background-color: red;">Delete</button>
          </div>
        </div>
        
        <div
          class=" container-fluid" style="min-height: 90vh;"
        >
        <% if (products.length > 0){ %>
          <% products.forEach((product)=>{ %>
          <div  class="row d-flex justify-content-evenly">
              <div class="order col-12">
              <img loading="lazy" onclick="viewProductDetails('<%= product._id %>')" class="orderImage" src="<%= product.image %>" alt="">
              <div class="orderDetails">
                <div class="orderBrand"><%= product.brand %></div>
                <div class="orderName"><%= product.name %></div>
              </div>
              <div class="orderDetails">  
                <% if(product.price === product.finalPrice){ %>
                <div class="order-total">&#8377 <%= product.finalPrice %></div>
                <% } else { %>
                  <div class="order-mrp">&#8377 <%= product.price %></div>
                <div class="order-total">&#8377 <%= product.finalPrice %></div>
                <% } %>
                <button onclick="openDeleteConfirm('<%= product._id %>')">Delete</button>
              </div>
            </div>
          </div>
        <% }) } else { %>
          <div id="emptyMessage"><i class='bx bxs-heart' ></i> Your wishlist is empty...</div>
        <% } %>

          <div class="space"></div>
        </div>
    </main>

        <%- include('../partials/userFooter.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="/scripts/user/wishlist.js"></script>
  </body>
</html>
