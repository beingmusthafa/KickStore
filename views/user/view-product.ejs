<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Bungee&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/user/view-product.css" />
    <link rel="stylesheet" href="/stylesheets/user/headerFooter.css">
    <title>KickStore</title>
  </head>
  <body>
        <%- include('../partials/userHeader.ejs') %>

    <main>
      <div class="row d-flex justify-content-evenly">
            <div class="userImageCon col-12 col-md-6">
              <img loading="lazy" class="userImage" src="<%= product.image %>" alt="">
              <% product.subImages.forEach((image)=>{ %>
              <img loading="lazy" class="userImage" src="<%= image %>" alt="">
              <% }) %>

            </div>
          <div class="info-table col-12 col-md-6">
            <div class="brandName"><%= product.brand %></div>
            <div class="productName"><%= product.name %></div>
            <% if(product.price === product.finalPrice){ %>
                  <div class="d-flex justify-content-center"> 
                  <div class="price fw-bold" style=" font-size: 1.6rem;">&#8377 <%= product.price %></div>
                  </div>
                  <% } else { %>
                <div class="d-flex justify-content-start gap-2 w-100 align-items-center">
                    <div class="price fw-bold text-success" style="font-size: 1.6rem;">&#8377 <%= product.finalPrice %></div>
                  <div class="price fw-bold" style="text-decoration: line-through; color: grey; font-size: 1.2rem;">&#8377 <%= product.price %></div>
                </div>
                   <% } %>
            <div class="description"><%= product.description %>
            </div>
            <div class="sizesCon">
              <% if(stocks.length > 0){ %>
                <% stocks.forEach((stock)=>{ %>
              <button onclick="sizeSelect('<%= stock.size %>')" class="size"><%= stock.size %></button>

              <% }) %>
              </div>
            <p class="d-none" id="sizeWarning" style="color: red;">Select a size!</p>
            <p class="d-none" id="addedToCart" style="color: green; font-weight: bold;">ADDED TO CART!</p>
            <div class="buttons">
              <button onclick="addToCart('<%= product._id %>')">Add to cart</button>
              <!-- <button onclick="buyNow()">Buy now</button> -->
                <% }else{ %>
                  <div style="color: red;font-weight: bold; font-size: 2rem;">OUT OF STOCK</div>
                <% } %>
            
              <% if(wishlist === true){ %>
              <button id="wishlistButton" onclick="removeWishlist('<%= product._id %>')" style="font-size: 1.5rem;"><i class='bx bxs-heart' ></i></button>
              <% } else { %>
                <button id="wishlistButton" onclick="addWishlist('<%= product._id %>')" style="font-size: 1.5rem;"><i class='bx bx-heart'></i></button>
              <% } %>
              
            </div> 
          </div>
      </div>

      <div class="row"></div>
      <div class="row">
        
      </div>
  </main>
        <%- include('../partials/userFooter.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
            <script src="/scripts/user/view-product.js"></script>

  </body>
</html>
