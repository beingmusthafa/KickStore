<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Meta Tags for Bootstrap 5 -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/admin/list-users.css" />
    <link rel="stylesheet" href="/stylesheets/admin/navbar.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="icon" href="https://res.cloudinary.com/dfezowkdc/image/upload/v1697096319/kickstore_logo_dbympn.png">
    <title>Hello, world!</title>
  </head>
  <body>
    <!-- sidebar -->
    <%- include('../partials/adminSidebar.ejs') %>

        <!-- content body -->
        <div
          class="content container-fluid d-flex flex-column align-items-center "
        >
          <form
            action="/admin/users/search"
            method="get"
            class="d-flex align-items-center justify-content-center w-100"
          >
            <input
              class="searchField"
              type="text"
              name="search"
              placeholder="Search users"
            />
            <button
              class="searchButton"
              style="
                font-size: 1.2rem;
                padding: 0.2rem 0.6rem; "
              type="submit"
            >
              <i class="bx bx-search"></i>
            </button>
          </form>
          <div class="row d-flex justify-content-start">
            <% users.forEach(function(user) { %>
            <div class="card-container col-6 col-sm-4 col-md-3">
              <div
                onclick="viewUserDetails('<%= user._id %>')"
                class="userCard d-flex flex-column align-items-center"
              >
                <img loading="lazy" class="userImage" src="<%= user.image %>" />

                <div class="userName"><%= user.name %></div>
              </div>
            </div>
            <% }) %>
          </div>
          <div class="space"></div>
        </div>
      </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
        <script src="/scripts/admin/list-users.js"></script>

  </body>
</html>
