<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Meta Tags for Bootstrap 5 -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/authentication.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <title>Hello, world!</title>
  </head>
  <body>
    <div id="loading" class="d-none">
      <div>
        <img id="loading-gif" src="https://i.gifer.com/ZKZx.gif" alt="" />
      </div>
    </div>
    <div class="link">
      Already have an account?<br /><a class="fw-bold" href="/login"
        >Go to login</a
      >
    </div>
    <div
      id="details-form-container"
      class="form-container d-flex flex-column align-items-center"
    >
      <form action="/signup" method="post" class="login-form" id="details-form">
        <div class="form-title">Sign up</div>
        <div class="d-flex flex-column align-items-start">
          <label for="name">Full name</label>
          <input type="text" name="name" class="text-input" id="name" />
          <div class="warning" id="name-warning"></div>
        </div>

        <div class="d-flex flex-column align-items-start">
          <label for="email">Email address</label>
          <input type="email" name="email" class="text-input" id="email" />

          <div class="warning" id="email-warning"><%= emailWarning %></div>
        </div>

        <div class="d-flex flex-column align-items-start">
          <label for="phone">Phone number</label>
          <input type="number" name="phone" class="text-input" id="phone" />

          <div class="warning" id="phone-warning"><%= phoneWarning %></div>
        </div>

        <div class="d-flex flex-column align-items-start">
          <label for="password">Password</label>
          <input
            type="password"
            name="password"
            class="text-input"
            id="password"
          />
          <div class="warning" id="password-warning"></div>
        </div>

        <div class="d-flex flex-column align-items-start">
          <label for="passwordConfirm">Confirm password</label>
          <input
            type="password"
            name="passwordConfirm"
            class="text-input"
            id="passwordConfirm"
          />
          <div class="warning" id="passwordConfirm-warning"></div>
        </div>
      </form>
      <button id="details-form-button" onclick="sendCode()" id="loginButton">
        Sign up
      </button>
    </div>

    <div
      id="verify-form-container"
      class="form-container d-flex flex-column align-items-center d-none"
    >
      <form
        method="post"
        class="login-form d-none"
        id="verify-form"
        enctype="multipart/form-data"
      >
        <div class="form-title">Sign up</div>
        <div>Verification codes have been sent to your phone and email.</div>

        <div class="d-flex flex-column align-items-start">
          <label for="emailVerify">Email verification code</label>
          <input
            type="number"
            name="emailVerify"
            class="text-input"
            id="emailVerify"
          />
          <div class="warning" id="emailVerify-warning"></div>
        </div>

        <div class="d-flex flex-column align-items-start">
          <label for="phoneVerify">Phone verification code</label>
          <input
            type="number"
            name="phoneVerify"
            class="text-input"
            id="phoneVerify"
          />

          <div class="warning" id="phoneVerify-warning"></div>
        </div>
      </form>
      <button
        class="d-none"
        id="verify-form-button"
        onclick="checkCode()"
        id="loginButton"
      >
        Verify
      </button>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    <script src="/scripts/user-signup.js"></script>
  </body>
</html>
